<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage"
             Title="">

    <ScrollView>
        <HorizontalStackLayout
            x:Name="MasterLayout"
            Spacing="10"
            Margin="40"
            HorizontalOptions="Center">

            <VerticalStackLayout>
                <ImageButton
                    x:Name="Expectation1"
                    Source="ex1.jpg"
                    HeightRequest="200"
                    Clicked="OnImageButton1Clicked" />

                <Label
                    x:Name="lbl1"
                    Text="Expectation"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <ImageButton
                    x:Name="Expectation2"
                    Source="ex2.jpg"
                    HeightRequest="200"
                    Clicked="OnImageButton2Clicked"
                    />

                <Label
                    x:Name="lbl2"
                    Text="Expectation"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>


        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
